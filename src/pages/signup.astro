---
import Layout from "../components/Layout.astro"
import SignUpForm from "../components/SignUpForm.astro"

---

<Layout title="Sign Up">
    <main>
        <div class="signup-container">
            <h1>Sign Up</h1>
            <SignUpForm onSignUp={() => alert("Sign Up submitted")} />
            <p>Already have an account? <a href="login#" on:click={() => alert("Login clicked")}>Login</a></p>
        </div>
    </main>
</Layout>

<style>
    main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .signup-container {
        text-align: center;
        max-width: 400px;
        margin: auto;
    }

    h1 {
        font-size: 24px;
        font-weight: 600;
        color: var(--secondary);
    }

    a {
        color: var(--secondary);
        text-decoration: underline;
        cursor: pointer;
    }
</style>
