---
import Layout from "../components/Layout.astro"
import CardCarrito from "../components/CardCarrito.astro"

const cardsCarrito: Array<{ title: string; description: string }> = [
	{
		title: "Pizza Margherita",
		description: "Tomato sauce, mozzarella, and oregano",
	},
	{
		title: "Pizza Marinara",
		description: "Tomato sauce, garlic and basil",
	},
	{
		title: "Pizza Quattro Stagioni",
		description: "Tomato sauce, mozzarella, mushrooms, ham, artichokes, olives, and oregano",
	},
	
]
---

<Layout title="Carrito">
    <main>
        <div class="productos">
		{
            
			cardsCarrito.map(({ title, description}) => {
				return <CardCarrito title={title} description={description} />
			})
		}
        </div>
        <div class="precio">
            <header>
                <h1>Total a pagar</h1>
                <h2>$</h2>
            </header>
            <div class="container">
            <button class="btn-pagar">Pagar</button>
            </div>
        </div>
	</main>
</Layout>

<style>
    main {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
		padding: 1rem;
		grid-gap: 1rem;
	}

    .productos{
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .container {
    text-align: center;
    }    

    button {
        border: none;
        border-radius: 1rem;
        padding: 0.5rem;
        font-size: inherit;
        font-family: inherit;
        background-color: var(--primary);
        box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.1);
        font-weight: 600;
        transition: all 0.2s ease-in;
    }

    button:hover {
        cursor: pointer;
    }
    
    h1{
        font-size: 20px;
        font-weight: 600;
        color: var(--secondary);
        text-align: center;
    }

    h2{
        text-align: center;
    }

    .selected {
        background-color: var(--secondary);
        color: var(--primary);
    }
</style>
