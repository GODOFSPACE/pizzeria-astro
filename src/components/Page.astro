---
import Formulario from "./Formulario";
import Layout from "./Layout.astro"

interface Props {
    title: string;
    description: string;
    image: string;
}

const {title, description, image } = Astro.props;

---
<Layout title={title}>
    <main>
        <header>
            <h1>
                {title}
            </h1>
            <picture>
                <img
                    src={image}
                    alt="Random image"
                />
            </picture>
        </header>
        <section>
            <p>{description}</p>
            <label>Ingredients: Tomato sauce, pepperoni, and oregano</label>
            <Formulario client:visible pizza="Pepperoni"/>
        </section>
    </main>
</Layout>


<style>
    select {
        width: 10rem;
        padding: 0.5rem;
        font-weight: 900;
        background-color: var(--primary);
        border: none;
        border-radius: 1rem;
        text-align: center;
    }
    span {
        color: var(--secondary);
    }
    section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1rem;
        background-color: #e0ecec;
        padding: 10px;
        border-radius: 1rem;        
    }
    main {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
    }
    span {
        color: var(--secondary);
    }

    p {
        font-size: 20px;
    }

    footer {
        display: flex;        
        justify-content: space-around;
        align-items: center;
        margin-top: 1rem;
        gap: 0.5rem;
        width: 100%;
        font-weight: 600;
    }

    .chips {
        display: flex;
        gap: 0.5rem;
    }
    .chip-large {
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 1rem;
        width: 100%;
        height: 40px;
        font-size: inherit;
        font-family: inherit;
        background-color: var(--primary);
        font-size: 12px;
        font-weight: 600;
    }

    .chip {    
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 1rem;
        width: 40px;
        height: 40px;
        font-size: inherit;
        font-family: inherit;
        background-color: var(--primary);
        font-size: 12px;
        font-weight: 600;
    }

    .selected {
        background-color: var(--secondary);
        color: var(--primary);
    }

    button {
        border: none;
        border-radius: 1rem;
        padding: 0.5rem;
        font-size: inherit;
        font-family: inherit;
        background-color: var(--primary);
        box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.1);
        font-weight: 600;
        transition: all 0.2s ease-in;
    }

    button:hover {
        cursor: pointer;
    }

    header {
        position: relative;
        max-height: 300px;
        overflow: hidden;
        border-radius: 1rem;
    }

    h1{
        font-size: 40px;
        font-weight: 600;
        color: var(--secondary);
        padding: 10px;
        background-color: var(--primary);
        border-radius: 1rem;
        width: fit-content;
        position: absolute;
        left: 10px;
        top: 10px;
        z-index: 10;
    }
    label { 
        font-size: 20px;     
        font-weight: 600;
    }
    .descripcion{
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-align: center;
        width: 100%;     
    }
    .card {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
        width: 100%;
        background: #e0ecec;
        border-radius: 1rem;
        padding: 1rem; 
        transition: all 0.2s ease-in;
    }

    .card:hover {
        box-shadow: 5px 5px 10px 0px rgba(0,0,0,0.2);
        transform: scale(1.01);
        cursor: pointer;
    }
    
    picture {
        width: 100%;
    }
    img {
        width: 100%;
        border-radius: 1rem;
    }
</style>